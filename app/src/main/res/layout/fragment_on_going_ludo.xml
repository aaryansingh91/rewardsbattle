<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ui.fragments.OnGoingLudoFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="20dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/searchbar_radious_border"
        android:elevation="5dp"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:visibility="gone">

        <EditText
            android:id="@+id/ongoingsearchtext"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@android:color/transparent"
            android:hint="@string/search_contest"
            android:maxEms="10"
            android:maxLines="1"
            android:textColor="@color/black"
            android:textColorHint="#C1C1C1" />
    </LinearLayout>


     <androidx.recyclerview.widget.RecyclerView
         android:id="@+id/ludoliverecyclerview"
         android:layout_width="match_parent"
         android:layout_height="wrap_content" />

    <LinearLayout
        android:id="@+id/ongoingludoempty"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:gravity="center"
            android:text="@string/no_live_match_found"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
            android:textColor="@color/newblack"
            android:textStyle="bold" />
    </LinearLayout>

</LinearLayout>