<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:gravity="center">

    <androidx.cardview.widget.CardView
        android:id="@+id/gamecardviewnew"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginEnd="15dp"
        android:layout_marginTop="15dp"
        app:cardCornerRadius="5dp">

        <!-- Use FrameLayout so overlays (dot+number) appear above images -->
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <!-- Background + Content -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/game_bg_with_stroke"
                android:backgroundTint="@color/cardBg"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:id="@+id/opacity"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="#B3000000"
                        android:orientation="vertical"
                        android:visibility="gone" />

                    <ImageView
                        android:id="@+id/gameivnew1"
                        android:layout_width="match_parent"
                        android:layout_height="90dp"
                        android:src="@drawable/comingsoon"
                        android:scaleType="fitCenter" />

                    <ImageView
                        android:id="@+id/gameivnew"
                        android:layout_width="match_parent"
                        android:layout_height="90dp"
                        android:scaleType="centerCrop" />

                </RelativeLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#000"
                    android:gravity="center">


                <TextView
                        android:id="@+id/gameName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginVertical="5dp"
                        android:text="--"
                        android:lines="1"
                        android:textColor="@color/white"
                        android:textSize="11sp"
                        android:textStyle="bold" />

                </LinearLayout>
            </LinearLayout>

            <!-- âœ… Dot + Number Overlay -->
            <LinearLayout
                android:visibility="gone"
                android:id="@+id/dotNumberContainer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="top|end"
                android:layout_margin="0dp"
                android:background="#40000000"
                android:paddingHorizontal="10dp"
                android:paddingVertical="5dp"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <View
                    android:id="@+id/greenDot"
                    android:layout_width="10dp"
                    android:layout_height="10dp"
                    android:background="@drawable/green_dot_bg"/>



                <TextView
                    android:id="@+id/randomNumber"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="4dp"
                    android:text="0"
                    android:textColor="@color/white"
                    android:textSize="12sp"
                    android:textStyle="bold" />
            </LinearLayout>
        </FrameLayout>
    </androidx.cardview.widget.CardView>
</RelativeLayout>
